    <link rel="stylesheet" href="~/css/templatemo-stand-blog.css">
    <link rel="stylesheet" href="~/css/owl.css">
    <link rel="stylesheet" href="~/css/flex-slider.css">
    <script src="https://kit.fontawesome.com/6878db0f47.js" crossorigin="anonymous"></script>





</head>

<body>


    <!-- Header -->
    <header class="">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home"><h2>Blog<em>.</em></h2></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">
                                <i class="fa-solid fa-house"></i>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Add" asp-controller="Post">
                                    <i class="fa-solid fa-plus"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Logout" asp-controller="Login">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="Login">
                                    <i class="fa-solid fa-user"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Register" asp-controller="Login">
                                    <i class="fa-solid fa-user-plus"></i>
                                </a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                
                <div class="col-lg-12">
                    <div class="copyright-text">
                        <p>
                            Copyright 2022 Me Comp.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/js/custom-file-input.js"></script>

    <!-- Bootstrap core JavaScript -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Additional Scripts -->
    <script src="~/js/custom.js"></script>
    <script src="~/js/owl.js"></script>
    <script src="~/js/slick.js"></script>
    <script src="~/js/isotope.js"></script>
    <script src="~/js/accordions.js"></script>




    <script language="text/Javascript">
        cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
